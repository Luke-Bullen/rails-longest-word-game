<h1>New Game</h1>
<div class="row">
  <% @letters.each do |letter| %>
    <div class="block"><%=letter%></div>
  <% end %>
</div>
<%# <br> %>
<h3>What's the longest word you can find?</h3>
<form action="/score" method="post" data-turbo="false" class="input">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="input" class="" placeholder="Your guess...">
  <input type="submit" value="Play" class="btn btn-primary">
</form>
